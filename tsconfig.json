{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",                    
    "moduleResolution": "Node",           
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
     "resolveJsonModule": true,
    "useUnknownInCatchVariables": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
